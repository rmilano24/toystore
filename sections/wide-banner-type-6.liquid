"label": "Image",
"info": "Size: 1920x1000"
},
{
"type": "color",
"id": "zig_zax_pattern",
"label":"Zig Zag Pattern Color",
"default": "#000"
},
{
"type": "text",
"id": "title",
"label": "Heading"
},
{
"type": "color",
"id": "title_color",
"label":"Title color",
"default": "#000"
},
{
"type": "textarea",
"id": "text",
"label": "Description"
},
{
"type": "color",
"id": "text_color",
"label":"Description color",
"default": "#000"
},
{
"type": "text",
"id": "button",
"label": "Button text"
},
{
"type": "color",
"id": "button_bg_color",
"label":"Background color",
"default": "#000"
},
{
"type": "color",
"id": "button_txt_color",
"label":"Text color",
"default": "#fff"
},
{
"type": "color",
"id": "hover_button_bg_color",
"label":"Background Hover color",
"default": "#000"
},
{
"type": "color",
"id": "hover_button_txt_color",
"label":"Text Hover color",
"default": "#fff"
},
{
"type": "url",
"id": "link_1",
"label": "Link URL"
}
],
"presets": [
{
"name": "Wide Banner",
"category": "Image",
"blocks": []
}
]
}
{% endschema %}


